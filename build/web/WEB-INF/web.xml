<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>by.bsu.scheduler.servlets.MainServlet</servlet-name>
        <servlet-class>by.bsu.scheduler.servlets.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>/WEB-INF/jsp/index.jsp</servlet-name>
        <jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>/WEB-INF/jsp/view/position.jsp</servlet-name>
        <jsp-file>/WEB-INF/jsp/view/position.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>by.bsu.scheduler.servlets.MainServlet</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>by.bsu.scheduler.servlets.MainServlet</servlet-name>
        <url-pattern>/view/data/transports</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/WEB-INF/jsp/index.jsp</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>/WEB-INF/jsp/view/position.jsp</servlet-name>
        <url-pattern>/view/position</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
</web-app>
